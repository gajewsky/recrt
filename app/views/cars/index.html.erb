<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Describtion</th>
      <th>Comfort class</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.describtion %></td>
        <td><%= car.comfort_class %></td>
        <td><%= image_tag(car.picture_url, :width => 200) if car.picture.present? %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

